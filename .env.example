# Google Apps Script URL for form submissions
VITE_GOOGLE_SCRIPT_URL=your_google_script_url_here
# Production canonical site URL (used in sitemap and robots)
SITE_URL=https://your-domain.com
# Optional: Client-side site URL (falls back to SITE_URL)
VITE_SITE_URL=https://your-domain.com
# Newsletter webhook (n8n) - optional, API falls back if unset
N8N_WEBHOOK_NEWSLETTER=
# Notion API credentials (optional; API falls back to sample data if unset)
NOTION_TOKEN=
NOTION_DB_BLOG_ID=
# Optional: Notion property names (override only if your DB uses custom names)
NOTION_PROP_TITLE=Name
NOTION_PROP_SLUG=Slug
NOTION_PROP_DATE=Date
NOTION_PROP_EXCERPT=Excerpt
NOTION_PROP_TAGS=Tags
NOTION_PROP_READING_TIME=ReadingTime
# Optional: Notion API version
NOTION_VERSION=2022-06-28